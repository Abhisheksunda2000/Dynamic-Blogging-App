<div class="container ">
  
  <div class="row justify-content-center ">
    <div class="col-8">
      <%= render 'shared/errors', object: @comment, object_name: "comment" %>
      
      <%= form_with(model: @comment, data: { turbo: false }, class: "shadow p-3 mb-3 bg-danger rounded", local: true) do |f| %>
              
        <div class="form-group row mt-2">
          <%= f.label :commenter, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :commenter, class: "form-control shadow rounded", placeholder: "Enter your name" %>
          </div>
        </div>

        <div class="form-group row mt-2">
          <%= f.label :body, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :body, class: "form-control shadow rounded", placeholder: "Enter your commenter" %>
          </div>
        </div>

        <div class="form-group row justify-content-center mt-2">
          <div class="col-6 text-center">
            <%= f.submit%>
          </div>
        </div>

      <% end %>
    </div>
    <%= link_to '[ Cancel and return to posts listing ]', posts_path, class: "text-danger text-center" %>
  </div>
</div>





     




