<div class="container ">
  
  <div class="row justify-content-center ">
    <div class="col-10">
      <%= render 'shared/errors', object: @posts, object_name: "post"%>
      <%= form_with(model: @posts, class: "shadow p-3 mb-3 bg-danger rounded", local: true) do |f| %>
        
        <div class="form-group row mt-2">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of post" %>
          </div>
        </div>

        <div class="form-group row mt-2">
          <%= f.label :topic, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :topic, class: "form-control shadow rounded", placeholder: "Topic of post" %>
          </div>
        </div>

        <div class="form-group row mt-2">
            <%= f.label :text, class: "col-2 col-form-label text-light" %>
              <div class="col-10"> 
                <%= f.text_area :text, rows: 10, class: "form-control shadow rounded", placeholder: "Text of post" %>
              </div>
        </div>

        <div class="form-group row justify-content-center mt-2">
          <div class="col-6 text-center">
            <%= f.submit class: "btn btn-outline-light btn-lg" %>
          </div>
        </div>

      <% end %>
    </div>
    <%= link_to '[ Cancel and return to posts listing ]', posts_path, class: "text-danger text-center" %>
  </div>
</div>