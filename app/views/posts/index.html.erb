<div style="display:flex; flex-direction:column; justify-content:center; align-items:center; text-align:center;">
  <h1> Welcome to the SocialApp Posts Gallery</h1>

  <div class="flickr_pagination ">
       <%= will_paginate @posts, :container => false %>
  </div>       

     <% @posts.each do |p|  %> 
         
        <div style="border: 1px solid black; width:600px; margin:2px 0px;">
          
          <p> <strong> Author: </strong> <%= p.user.username if p.user%> </p>
          <p> <strong> Title:</strong><%= p.title %></p>
          <p> <strong> Topic:</strong><%= p.topic %> </p>
          <p> <strong> Text:</strong><%= p.text %></p>
          
          <p>
            Created <%= time_ago_in_words(p.created_at) %> ago, 
            edited <%= time_ago_in_words(p.updated_at) %> ago
          </p>
          
           

          <p>
          <button><%= link_to 'show', post_path(p) %> </button> ||
          <button><%= link_to 'edit', edit_post_path(p) %> </button> ||
          <button><%= link_to 'delete', post_path(p), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %> </button>
          </p>
        </div>
     <% end %>

     <div class="flickr_pagination ">
       <%= will_paginate @posts, :container => false %>
     </div>       

         


  <p> <%= link_to 'Create new Post', new_post_path(p)%> ||
    <%= link_to 'Home Page', root_path(p) %>
  </p>
</div> 