<h1> Create a new post </h1>

<%= form_with scope: @post, url: post_path, local: true do |f| %>
     
<p> 
  <%= f.label :Title %> <br/>
  <%= f.text_field :title %>
</p>

<p> 
  <%= f.label :Topic %> <br/>
  <%= f.text_field :topic %>
</p>

<p> 
  <%= f.label :Text %> <br/>
  <%= f.text_area :text %>
</p>

<p> 
  <%= f.submit %>
</p>
<% end %>