<h2 class="text-center mt-4"><%= @user.username %>'s profile</h2> 

<div class="flickr_pagination ">
 <%= will_paginate @posts, :container => false %>
 </div>  

 
    
<div class="container">
  <div class="row justify-content-md-center">
        <p class="col-8  text-center"> <%= gravatar_for @user, size: 80 %> </p>
        <% if logged_in? && @user == current_user %>
         <p class="col-8 text-center"> <%= link_to 'Edit your profile', edit_user_path(@user), class:"btn btn-outline-info" %> </p>
        <% end %>
  <% @posts.each do |post| %>
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-body rounded">
          <div class="card-body">
            <p class="card-text text-success fw-bold"> <%= link_to post.title, post_path(post)%> </p>
            <p class="card-text text-success fw-bold"><%= post.topic %></p>
            <p class="card-text"><%= truncate(post.text, length: 25) %></p>
            <%= link_to "View", post_path(post), class:"btn btn-outline-success" %>
            <% if logged_in? && post.user == current_user %>
              <%= link_to 'Edit', edit_post_path(post), class:"btn btn-outline-info" %>
              <%= link_to 'Delete', post_path(post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class:"btn btn-outline-danger" %>
            <% end %>
            </div>
          <div class="card-footer text-muted">
            Created <%= time_ago_in_words(post.created_at) %> ago, 
            edited <%= time_ago_in_words(post.updated_at) %> ago
          </div>
        </div>
      </div>
    <% end %>
  </div> 
</div>  

<div class="flickr_pagination ">
<%= will_paginate @posts, :container => false %>
</div> 

        

 

 

 

 

 

 
            
          
          
           
   
  

 



