<% if @users.errors.any? %>
   <h2> The following errors prevented the user from being created </h2>
   <ul>
   <% @users.errors.full_messages.each do |msg| %>
   <li><%= msg %></li>
   <% end %>
   </ul>
<% end %>


<%= form_with(model: @users, data: { turbo: false }, local: true) do |f| %>
     
<p> 
  <%= f.label :Username %> <br/>
  <%= f.text_field :username %>
</p>

<p> 
  <%= f.label :Email %> <br/>
  <%= f.text_field :email %>
</p>

<p> 
  <%= f.label :Password %> <br/>
  <%= f.text_area :password %>
</p>

<p> 
  <%= f.submit %>
</p>
<% end %>
