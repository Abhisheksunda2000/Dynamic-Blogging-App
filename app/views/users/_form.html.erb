<% if @user.errors.any? %>
   <h2> The following errors prevented the user from being created </h2>
   <ul>
   <% @user.errors.full_messages.each do |msg| %>
   <li><%= msg %></li>
   <% end %>
   </ul>
<% end %>


<%= form_with(model: @user, data: { turbo: false }, local: true) do |f| %>
     
<p> 
  <%= f.label :Username %> <br/>
  <%= f.text_field :username %>
</p>

<p> 
  <%= f.label :Email %> <br/>
  <%= f.text_field :email %>
</p>

<p> 
  <%= f.label :Password %> <br/>
  <%= f.password_field :password %>
</p>

<p> 
  <%= f.submit "Sign Up" %>
</p>
<% end %>
