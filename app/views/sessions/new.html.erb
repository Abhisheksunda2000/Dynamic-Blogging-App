<h1 class="text-center mt-4">Log in</h1>

<div class="container ">
  
  <div class="row justify-content-center ">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-danger rounded", local: true) do |f| %>
        
        <div class="form-group row mt-2">
          <%= f.label :Email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :email, class: "form-control shadow rounded", placeholder: "Enter your email" %>
          </div>
        </div>


        <div class="form-group row mt-2">
            <%= f.label :Password, class: "col-2 col-form-label text-light" %>
              <div class="col-10"> 
                <%= f.password_field :password, rows: 10, class: "form-control shadow rounded", placeholder: "Enter your valid password" %>
              </div>
        </div>

        <div class="form-group row justify-content-center mt-2">
          <div class="col-6 text-center">
            <%= f.submit "Log in", class: "btn btn-outline-light btn-lg" %>
          </div>
        </div>

      <% end %>
    </div>
    <%= link_to '[ Cancel and return to posts listing ]', posts_path, class: "text-danger text-center" %>
  </div>
</div>



